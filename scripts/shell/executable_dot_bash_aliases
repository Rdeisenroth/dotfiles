alias clr='clear'
alias cls='clear'
alias cd..='cd ..'
alias pmi='sudo pacman -S'
alias pmu='sudo pacman -Syu'
alias q='exit'
alias restartsql='systemctl restart mariadb'
alias countryroads='cd ~'
alias off='shutdown -h now'
alias aliases='nano ~/.bash_aliases'
alias track='watch -n 0,5 tail'
alias tlmgr='TEXMFDIST/scripts/texlive/tlmgr.pl --usermode'
alias rip='poweroff'
alias coolpipes='pipes-rs -p 6 -r 0'
alias restartplasmashell='kquitapp5 plasmashell && kstart5 plasmashell'
alias start_webcam='sudo modprobe v4l2loopback exclusive_caps=1 max_buffers=2 && gphoto2 --stdout --capture-movie | ffmpeg -hwaccel nvdec -c:v mjpeg_cuvid -i -vcodec rawvideo -pix_fmt yuv420p -threads 0 -f v4l2 /dev/video1'
rmpauses() {auto-editor $1 --frame_margin 4 --silent_threshold 0.04 --no_open exportMediaOps --video_codec libx265 --preset fast}
alias fixdiscordmonstream='while true; do timeout 60s mon2cam --monitor 0;date ; sleep .3; done'
bspwm_start() {export XDG_CURRENT_DESKTOP=BSPWM; unset KDE_SESSION_VERSION; unset KDE_FULL_SESSION; nohup $1 &;disown}
alias keybinds='nano .config/sxhkd/sxhkdrc'
alias reload_keybinds='pkill --signal SIGUSR1 sxhkd'
alias dc_bspwm='bspwm_start discord'
alias loadcuda='export PATH=$PATH:/opt/cuda/bin'
alias picomconfig='nano .config/picom/picom.conf'
alias keylog='xev -event keyboard'
alias getpublicsshkey='ssh-keygen -lf /etc/ssh/ssh_host_ecdsa_key.pub'
alias fancywallpaper='xwinwrap -g 1920x1080+0+0 -ov -ni -- mpv --fullscreen --no-stop-screensaver --loop -wid WID ~/Downloads/dotfiles-master/Videos/LiveWallpapers/Firewatch-Tower.mp4'
eval $(thefuck --alias)
